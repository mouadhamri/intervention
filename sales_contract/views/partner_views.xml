<odoo>


     <record id="view_partner_property_form_shipping_charges_contract" model="ir.ui.view">
            <field name="name">res.partner.product.property.form.inherit.shipping.charges</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <div name="button_box" position="inside">
                    <button class="oe_stat_button o_res_partner_tip_opp" type="object" name="view_partner_contracts"
                            icon="fa-star" groups="sales_contract.sale_contract_manager"
                            context="{'search_default_partner_id': active_id}">
                            <field string="Contrats" name="contract_count" widget="statinfo"/>
                        </button>
                </div>
            </field>

        </record>
</odoo>