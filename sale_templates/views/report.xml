            <field name="name">Devis</field>
            <field name="model">sale.order</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">sale_templates.report_saleorder_first</field>
            <field name="report_file">sale_templates.report_saleorder_first</field>
            <field name="print_report_name">(object.state in ('draft', 'sent') and 'Devis - %s' % (object.name)) or 'Commande - %s' % (object.name)</field>
