<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="external_layout_sale">
        <div t-attf-class="header o_company_#{company.id}_layout">
            <t t-if="show_logo">
                <div class="row mb1">
                    <div class="col-3">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:200px;"
                             alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:140px;" t-field="company.report_header"
                         name="moto"/>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
            </t>
            <t t-if="show_logo==False">
                <div class="row mb1">
                    <div class="col-2">
                        <span t-field="company.name"/>
                    </div>
                    <div class="col-2 offset-1">
                        DEVIS NÂ°:
                        <span t-field="o.name"/>
                    </div>
                    <div class="col-2 offset-1">
                        DATE:
                        <span t-field="o.date_order" t-options="{'widget':'date'}"/>
                    </div>
                    <div class="float-right col-3">
                        AFFAIRE:
                        <span t-field="o.chantier_id.name"/>
                    </div>


                </div>
            </t>

        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <t t-call="web.address_layout"/>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">

                <t t-if="page_foot">
                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </t>
                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

            </div>
        </div>
    </template>


    <template id="external_layout_devis">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>


        <t t-call="sale_templates.external_layout_sale">
            <t t-raw="0"/>
        </t>

    </template>
    <template id="layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <div class="header">
                <div class="row mb1">
                    <div class="col-3">
                        <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" style="max-height:200px;"
                             alt="Logo"/>
                    </div>
                    <div class="col-9 text-right" style="margin-top:140px;" t-field="company.report_header"
                         name="moto"/>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
        </div>

        <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
<!--            <t t-call="web.address_layout"/>-->
            <t t-raw="0"/>
        </div>
        <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
            <div class="text-center" style="border-top: 1px solid black;">

                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page"/>
                    /
                    <span class="topage"/>
                </div>
                <div name="financial_infos">
                    <span t-field="company.report_footer"/>
                </div>

            </div>
        </div>
    </template>


</odoo>