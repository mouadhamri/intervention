<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="gecop_invoice_rivp_report_document">
        <t t-call="sale_templates.layout">
            <t t-set="o" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <t t-set="current_date"
               t-value="context_timestamp(datetime.datetime.now()).strftime('%d %B %Y')"/>
            <div class="page" style="page-break-after:always;">
                <br/>
                <table>
                    <tr>
                        <td class="text-left" style="left:20mm">
                            <div class="row">
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <strong style="font-size:20px">FACTURE N°</strong>
                                <span t-field="o.name" style="font-size:20px"/>
                            </div>

                        </td>
                        <td class="text-left" style="position:absolute; margin-left:300px">
                            <strong>
                                <div t-field="o.partner_id"
                                     t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                            </strong>
                            <br/>
                            <div>
                                <strong>Alfortville, le
                                    <span t-esc="current_date"/>
                                </strong>
                                <br/>
                            </div>

                        </td>
                    </tr>
                </table>
                <br/>
                <table>
                    <tr>
                        <td class="text-left">
                            <strong>Code Client</strong>
                            <br/>
                            <strong>Code Chantier</strong>
                            <br/>
                            <strong>N° Commande</strong>
                            <br/>
<!--                            <strong>N° Dossier</strong>-->
<!--                            <br/>-->
                            <strong>Locataire</strong>
                            <br/>
                            <strong>Adresse</strong>
                            <br/>
                            <strong>Adresse3</strong>


                        </td>
                        <td>
                            <strong>:</strong>
                            <br/>
                            <strong>:</strong>
                            <br/>
<!--                            <strong>:</strong>-->
<!--                            <br/>-->
                            <strong>:</strong>
                            <br/>
                            <strong>:</strong>
                            <br/>
                            <strong>:</strong>
                            <br/>
                            <strong>:</strong>

                        </td>
                        <td>
                            <span t-field="o.partner_id.ref"/>
                            <br/>
                            <span t-esc="o.sale_chantier_id.name"/>
                            <br/>
                            <t t-if="o.ref">
                                <span t-field="o.ref"/>
                            </t>
                            <t t-elif="o.invoice_origin">
                                <span t-field="o.invoice_origin"/>
                            </t>
                            <br/>
<!--                            <span t-esc="o.sale_chantier_id.name"/>-->
<!--                            <br/>-->
                            <span t-esc="o.nom_client_final"/>
                            <br/>
                            <span t-esc="o.partner_address_1"/>
                            <br/>
                            <span t-esc="o.adress3"/>

                        </td>
                    </tr>
                </table>
                <br/>
                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                <table class="table table-sm o_main_table table-bordered" name="invoice_line_table">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="6"/>
                            <th class="text-left">
                                <span>Référence</span>
                            </th>
                            <th class="text-center" style="width:90mm;">
                                <span>Désignation</span>
                            </th>
                            <th class="text-center">
                                <span>Un</span>
                            </th>
                            <th class="text-center">
                                <span>Quantité</span>
                            </th>
                            <th class="text-center">
                                <span>Prix Unit.</span>
                            </th>
                            <th class="text-center">
                                <span>Montant H.T</span>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="invoice_tbody">
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-foreach="o.invoice_line_ids" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                    <td class="text-left">
                                        <span t-field="line.product_id.default_code"/>
                                    </td>
                                    <td class="text-left">
                                        <span t-field="line.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.product_uom_id"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.quantity"/>
                                    </td>
                                    <td t-attf-class="text-center"
                                    >
                                        <span t-field="line.price_unit"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-field="line.price_subtotal"/>
                                    </td>
                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>

                            <t t-if="current_section and (line_last or o.invoice_line_ids[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-right">
                                    <td colspan="99">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                        </t>
                    </tbody>
                    <!--                    <tr style="border-top:10mm solid black"></tr>-->

                </table>
                <div class="clearfix">
                    <div id="total" class="row">
                        <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                            <table class="table table-sm" style="page-break-inside: avoid;">
                                <tr class="border-black o_subtotal" style="">
                                    <td>
                                        <strong>Subtotal</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"/>
                                    </td>
                                </tr>
                                <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                    <tr style="">
                                        <t t-if="len(o.line_ids.filtered(lambda line: line.tax_line_id)) in [0, 1] and o.amount_untaxed == amount_by_group[2]">
                                            <td>
                                                <span class="text-nowrap" t-esc="amount_by_group[0]"/>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                        <t t-else="">
                                            <td>
                                                <span t-esc="amount_by_group[0]"/>
                                                <span class="text-nowrap">on
                                                    <t t-esc="amount_by_group[4]"/>
                                                </span>
                                            </td>
                                            <td class="text-right o_price_total">
                                                <span class="text-nowrap" t-esc="amount_by_group[3]"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr class="border-black o_total">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_total"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
                <br/>
                <div class="row mt16 mb8" style="margin-left: 30mm; margin-right:30mm">
                    <table class="table" style="table-layout: fixed; border: 1px solid">
                        <tr style="margin-left:30mm; margin-right: 30mm;border-top:1px solid;">
                            <td colspan="3" class="text-left" style="width: 90mm;border-top:1px solid;">
                                <strong>Règlement :</strong>
                                <br/>
                                <strong>Échéance de 100,00% au
                                    <span t-field="o.invoice_date_due"
                                          t-options="{'widget': 'date', 'format':'dd/MM/yyyy'}"/>:
                                </strong>
                            </td>
                            <td style="width:10mm;border-top:1px solid;">
                                <br/>
                                <br/>
                            </td>
                            <td style="border-top:1px solid;">
                                <span t-field="o.invoice_payment_term_id"/>
                                <br/>
                                <span t-field="o.amount_total"/>
                            </td>
                        </tr>
                        <br/>


                    </table>
                </div>
                <table>
                    <tr>
                        <td class="text-left">
                            <p style="font-size: 11px">
                                Sans escompte en cas de paiement avant la date de règlement.
                                <br/>
                                Taux d'intérêt des pénalités de retard exigibles le jour suivant la date limite de
                                règlement:
                                <br/>
                                3 fois le taux de l'intérêt légal.
                                <br/>
                                Indemnité forfaitaire de recouvrement
                                en
                                cas de retard de paiement : 40 €.
                                <br/>
                                Ce montant sera révisé si les frais engagés sont
                                supérieurs.
                            </p>
                        </td>
                        <td style="position:absolute; margin-left:200px">
                            <strong>La Présidente</strong>
                            <br/>
                            <strong>C. FERNANDES</strong>
                             <t t-if="o.company_id.signature">
                                         <img
                                              t-att-src="image_data_uri(o.company_id.signature)"
                                              class="float-left" alt="Signature présidente" width="330" height="150"/></t>

                        </td>
                    </tr>
                </table>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <br/>
                <div class="text-center">
                    <p>
                        Facture à régler à: BNPPARB IDF EST (02511)<br/>
                        Code Banque: 30004 - Code guichet: 02231 - Numéro de compte: 00010001767 - Clé RIB: 54<br/>
                        IBAN:FR76 3000 4022 3100 0100 0176 754 - BIC:BNPAFRPPIFE

                    </p>

                </div>

            </div>

        </t>
    </template>
    <template id="report_gecop_rivp_invoice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="account_extend.gecop_invoice_rivp_report_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
