<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="layout">
            <t t-if="not o" t-set="o" t-value="doc"/>

            <t t-if="not company">
                <!-- Multicompany -->
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <div class="header">
                <div class="row">
                    <table>
                        <tr>
                            <t t-if="o.partner_id">
                                <td style="width:40%;">
                                        <img t-if="o.partner_id.image_1920" t-att-src="image_data_uri(o.partner_id.image_1920)" style="max-width:200px;max-height:800px;" alt="Client Image"/>
                                </td>

                            <td>

                                    <span t-field="o.partner_id"
                                         t-options='{"widget": "contact", "fields": ["name","address", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>

                            </td>
                              </t>
                        </tr>
                    </table>
                    </div>
            </div>
            <div class="article"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-raw="0"/>
            </div>

            <div class="footer">
                <div class="text-center">
                    <ul class="list-inline">
                        <li class="list-inline-item">
                            <span class="page"/>
                        </li>
                        <li class="list-inline-item">/</li>
                        <li class="list-inline-item">
                            <span class="topage"/>
                        </li>
                    </ul>
                </div>
            </div>
        </template>
    </data>
</odoo>